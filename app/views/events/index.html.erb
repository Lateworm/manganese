<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Started at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to(event.name, event) %></td>
        <td><%= event.started_at %></td>
        
        <% if current_user&.role == 'admin' %>
          <td><%= link_to('Edit', edit_event_path(event), class: 'danger') %></td>
          <td><%= link_to('Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'danger') %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New Event', new_event_path, class: 'danger') if current_user&.role == 'admin' %>
