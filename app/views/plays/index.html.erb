<p id="notice"><%= notice %></p>

<h1>Plays</h1>

<table>
  <thead>
    <tr>
      <th>Album</th>
      <th>Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plays.each do |play| %>
      <tr>
        <td><%= link_to(play.album.name, play.album) %></td>
        <td><%= link_to(play.event.name, play.event) %></td>
        <td><%= link_to 'Show', play %></td>

        <% if current_user&.role == 'admin' %>
          <td><%= link_to 'Edit', edit_play_path(play) %></td>
          <td><%= link_to 'Destroy', play, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New Play', new_play_path, class: 'danger') if current_user&.role == 'admin' %>
