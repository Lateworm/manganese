<p id="notice"><%= notice %></p>

<h1>Albums</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th><%= link_to('Artist', artists_path) %></th>
      <th>First Suggested</th>
      <th>Recommendations</th>
      <th><%= link_to('Sources', sources_path) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.name %></td>
        <td><%= link_to(album.artist.name, artist_path(album.artist)) %></td>
        <td><%= album.created_at.strftime('%Y-%m-%d') %></td>
        <td><%= album.recommendations.ids.length %></td>
        <td><%= album.sources.ids.length %></td>
        <td><%= link_to('Show', album) %></td>

        <% if current_user&.role == 'admin' %>
          <td><%= link_to('Edit', edit_album_path(album)) %></td>
          <td><%= link_to('Destroy', album, method: :delete, data: { confirm: 'Are you sure?' }) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New Album', new_album_path) if current_user&.role == 'admin' %>
