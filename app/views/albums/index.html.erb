<p id="notice"><%= notice %></p>

<h1>Albums</h1>

<table>
  <thead>
    <tr>
      <th>
        <%= link_to('Name', albums_path(:order_by => 'album')) %>
        <%= link_to('\\', albums_path(:order_by => 'album_d')) %>
      </th>
      <th>
        <%= link_to('Artist', albums_path(:order_by => 'artist')) %>
        <%= link_to('\\', albums_path(:order_by => 'artist_d')) %>
      </th>
      <th>First Suggested</th>
      <th>Recommendations</th>
      <th>Sources</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= link_to(album.name, album) %></td>
        <td><%= link_to(album.artist.name, artist_path(album.artist)) %></td>
        <td><%= album.recommendations.first.created_at.strftime('%Y-%m-%d') if album.recommendations.length > 0 %></td>
        <td><%= album.recommendations.length %></td>
        <td><%= album.sources.length %></td>

        <% if current_user&.role == 'admin' %>
          <td><%= link_to('Edit', edit_album_path(album), class: 'danger') %></td>
          <td><%= link_to('Destroy', album, method: :delete, data: { confirm: 'Are you sure?' }, class: 'danger') %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New Album', new_album_path) if current_user&.role == 'admin' %>
