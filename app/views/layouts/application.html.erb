<!DOCTYPE html>
<html>
  <head>
    <title>Curt's Album Party</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <% # TODO: themes %>
    <style>
     :root {
        /* light+
        --c-bg-shade: #DDD;
        --c-bg: #EEE;
        --c-bg-tint: #FFF;

        --c-fg: #222;
        --c-link: #20F;
        --c-neg: #D26; */

        /* dark+  */
        --c-bg-shade: #111;
        --c-bg: #222;
        --c-bg-tint: #333;

        --c-fg: #EEE;
        --c-link: #9DF;
        --c-neg: #C97;
      }
    </style>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <nav>
      <% # Navigation Menu %>
      <div>
        <span>Curt's Album Party</span>
        <% unless current_page?(events_path) %>
          <span> | </span>
          <%= link_to('Events', events_path) %>
        <% end %>
        <% unless current_page?(albums_path) %>
          <span> | </span>
          <%= link_to('Albums', albums_path) unless current_page?(albums_path) %>
        <% end %>
      </div>

      <% # User Menu %>
      <div>
        <% if user_signed_in? %>
          <%= link_to(current_user.name, edit_user_registration_path) %>
          <span> | </span>
          <%= link_to('Sign Out', destroy_user_session_path, method: :delete, class: 'danger') %>
        <% else %>
          <%= link_to('Sign Up', new_user_registration_path) %>
          <span> | </span>
          <%= link_to('Sign In', new_user_session_path) %>
        <% end %>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
